{
  "name": "@oliveira/ralapor",
  "version": "alpha@1.0.0",
  "scripts": {
    "backend:unit:test": "vitest packages/backend",
    "frontend:unit:test": "vitest packages/frontend",
    "frontend:e2e:test": "pnpm playwright test",
    "prettier:fix": "prettier --write .",
    "lint:fix": "eslint --fix",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "pnpm run prettier:fix",
      "pnpm run lint:fix",
      "pnpm run backend:unit:test",
      "pnpm run frontend:unit:test"
    ]
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@eslint/js": "^9.30.0",
    "@playwright/test": "^1.53.1",
    "@storybook/addon-a11y": "^9.0.15",
    "@storybook/addon-docs": "^9.0.15",
    "@storybook/addon-vitest": "^9.0.15",
    "@storybook/react-vite": "^9.0.15",
    "@types/node": "^24.0.7",
    "eslint": "^9.30.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-storybook": "^9.0.15",
    "globals": "^16.2.0",
    "husky": "^8.0.0",
    "prettier": "3.6.2",
    "storybook": "^9.0.15",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vitest": "^3.2.4",
    "@vitest/browser": "3.2.4",
    "playwright": "^1.53.2",
    "@vitest/coverage-v8": "3.2.4"
  },
  "author": {
    "name": "Diogo Rafael Louren√ßo Oliveira",
